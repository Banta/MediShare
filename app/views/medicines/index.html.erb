<h1>Listing medicines</h1>

<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Actions</th>
  </tr>

<% @medicines.each do |medicine| %>
  <tr>
    <td><%= medicine.name unless medicine.name.nil? %></td>
    <td>
      <%= link_to t('.show', :default => t("helpers.links.show")), medicine, :class => 'btn btn-mini' %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_medicine_path(medicine), :class => 'btn btn-mini' %>
      <%= link_to 'Destroy', medicine,
                  :method => :delete,
                  :class => "btn btn-mini btn-danger", 
                  :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add Medicine', new_medicine_path, :class => "btn btn-primary" %>
