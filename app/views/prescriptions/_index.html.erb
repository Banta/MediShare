<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>Actions</th>
  </tr>

<% @prescriptions.each do |prescription| %>
  <tr>
    <td><%= prescription.name unless prescription.name.nil? %></td>
    <td>
          <%= link_to 'Show', prescription, :class => 'btn btn-mini' %>
          <%= link_to 'Edit', edit_prescription_path(prescription), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', prescription,
                      :method => :delete,
                      :class => "btn btn-mini btn-danger", 
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) %>
        </td>
  </tr>
<% end %>
</table>
