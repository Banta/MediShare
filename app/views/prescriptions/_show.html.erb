<tr>
  <td><%= prescription.name unless prescription.name.nil? %></td>
  <td>
        <%= link_to 'Show',"#showPrescriptionModal#{prescription.id}", :'data-toggle'=>"modal", :class => 'btn btn-mini' %>
        <%= link_to 'Edit', "#editPrescriptionModal#{prescription.id}", :'data-toggle'=>"modal", :class => 'btn btn-mini' %>
        <%= link_to 'Destroy', prescription,
                    :method => :delete,
                    :class => "btn btn-mini btn-danger", 
                    :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) %>
      </td>
</tr>

<div id="showPrescriptionModal<%= "#{prescription.id}"%>" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3 id="myModalLabel">Prescription</h3>
  </div>
  <div class="modal-body">
  	<dl class="dl-horizontal">
        <dt><strong>Name:</strong></dt>
        <dd><%= prescription.name %></dd>
        <dt><strong>Notes:</strong></dt>
        <dd><%=prescription.notes %></dd>
      </dl>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal">Close</button>
    <%= link_to 'Edit', "#editPrescriptionModal#{prescription.id}", :'data-toggle'=>"modal",
    :'data-dismiss'=>"modal", :class => 'btn btn-primary' %>
  </div>
</div>

<%= render "prescriptions/edit", :prescription => prescription%>