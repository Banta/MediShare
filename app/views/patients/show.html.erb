<%- model_class = Patient -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<div class="widget">
  <div class="widget-header">
    <i class="icon-file"></i>
    <h3><%= @patient.names %></h3>
    <a data-toggle="modal" href="#lorryexpenseModal" class="btn btn-primary">Add prescription</a>
  </div> <!-- /widget-header -->

  <div class="widget-content">
  <div class="row">
    <div class="span4">
      <dl class="dl-horizontal">
        <dt><strong><%= model_class.human_attribute_name(:identification_number) %>:</strong></dt>
        <dd><%= @patient.identification_number %></dd>
        <dt><strong><%= model_class.human_attribute_name(:gender) %>:</strong></dt>
        <dd><%= @patient.gender %></dd>
        <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
        <dd><%= @patient.address %></dd>
        <dt><strong><%= model_class.human_attribute_name(:town) %>:</strong></dt>
        <dd><%= @patient.town %></dd>
        <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
        <dd><%= @patient.location %></dd>
        <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
        <dd><%= @patient.phone %></dd>
        <dt><strong><%= model_class.human_attribute_name(:country) %>:</strong></dt>
        <dd><%= @patient.country %></dd>
        <dt><strong><%= model_class.human_attribute_name(:occupation) %>:</strong></dt>
        <dd><%= @patient.occupation %></dd>
        <dt><strong><%= model_class.human_attribute_name(:civil_status) %>:</strong></dt>
        <dd><%= @patient.civil_status %></dd>
        <dt><strong><%= model_class.human_attribute_name(:date_of_birth) %>:</strong></dt>
        <dd><%= @patient.date_of_birth %></dd>
        <dt><strong><%= model_class.human_attribute_name(:health_facility_id) %>:</strong></dt>
        <dd><%= @patient.health_facility_id %></dd>
      </dl>
    </div>

    <div class="span4">
      <h4>Prescriptions</h4>
      <%= render "prescriptions/new" %>
      <%= render "prescriptions/index" %>
    </div><!-- End span4 -->
  </div><!-- End row -->         

    <div class="form-actions">
      <%= link_to t('.back', :default => t("helpers.links.back")),
                  patients_path, :class => 'btn'  %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_patient_path(@patient), :class => 'btn' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  patient_path(@patient),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>
    </div>
  </div> <!-- /widget-content -->
</div> <!-- /widget -->
