<%= simple_form_for @prescription, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :id %>
  
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                patients_path, :class => 'btn' %>
  </div>
<% end %>