<%= simple_form_for @health_facility, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :hmis %>
  <%= f.input :province %>
  <%= f.input :district %>
  <%= f.input :division %>
  <%= f.input :location %>
  <%= f.input :sub_location %>
  <%= f.input :srm %>
  <%= f.input :facility_type %>
  <%= f.input :agency %>
  <%= f.input :latitude %>
  <%= f.input :longitude %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                health_facilities_path, :class => 'btn' %>
  </div>
<% end %>
