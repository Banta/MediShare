<%= simple_form_for(@health_facility) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :hmis %>
    <%= f.input :province %>
    <%= f.input :district %>
    <%= f.input :division %>
    <%= f.input :location %>
    <%= f.input :sub_location %>
    <%= f.input :srm %>
    <%= f.input :facility_type %>
    <%= f.input :agency %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
