<%- model_class = HealthFacility -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @health_facility.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hmis) %>:</strong></dt>
  <dd><%= @health_facility.hmis %></dd>
  <dt><strong><%= model_class.human_attribute_name(:province) %>:</strong></dt>
  <dd><%= @health_facility.province %></dd>
  <dt><strong><%= model_class.human_attribute_name(:district) %>:</strong></dt>
  <dd><%= @health_facility.district %></dd>
  <dt><strong><%= model_class.human_attribute_name(:division) %>:</strong></dt>
  <dd><%= @health_facility.division %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @health_facility.location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sub_location) %>:</strong></dt>
  <dd><%= @health_facility.sub_location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:srm) %>:</strong></dt>
  <dd><%= @health_facility.srm %></dd>
  <dt><strong><%= model_class.human_attribute_name(:facility_type) %>:</strong></dt>
  <dd><%= @health_facility.facility_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:agency) %>:</strong></dt>
  <dd><%= @health_facility.agency %></dd>
  <dt><strong><%= model_class.human_attribute_name(:latitude) %>:</strong></dt>
  <dd><%= @health_facility.latitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:longitude) %>:</strong></dt>
  <dd><%= @health_facility.longitude %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              health_facilities_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_health_facility_path(@health_facility), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              health_facility_path(@health_facility),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
